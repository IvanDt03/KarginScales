<Application x:Class="KarginScales.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KarginScales"
             StartupUri="views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/TextBlockstyles.xaml"/>
                <ResourceDictionary Source="/Resources/StyleForButtons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="FontForLCDData">pack://application:,,,/Content/#DigitalCyrillic1</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
