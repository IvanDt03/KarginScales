<UserControl x:Class="KarginScales.Views.LCDData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarginScales.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="lcdData">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Margin="5" Text="{Binding ElementName=lcdData, Path=Title}"></TextBlock>
        <TextBox Text="{Binding ElementName=lcdData, Path=Data, StringFormat={}{0:F3}}"
                 Margin="3"
                 IsReadOnly="True"
                 Focusable="False"/>
    </StackPanel>
</UserControl>
