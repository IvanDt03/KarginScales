<UserControl x:Class="KarginScales.Views.Scales"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarginScales.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center"
             MaxHeight="700" MaxWidth="700">
        <Canvas Background="White" Width="400" Height="400">
            <Path Fill="LightGray" Stroke="DarkGray" StrokeThickness="2">
                <Path.Data>
                    <CombinedGeometry>
                        <CombinedGeometry.Geometry1>
                            <RectangleGeometry Rect="100,300,200,20"/>
                        </CombinedGeometry.Geometry1>
                        <CombinedGeometry.Geometry2>
                            <RectangleGeometry Rect="180,290,30,10"/>
                        </CombinedGeometry.Geometry2>
                    </CombinedGeometry>
                </Path.Data>
            </Path>
            <Rectangle Canvas.Left="170" Canvas.Top="254" Width="50" Height="35" Fill="Black" RadiusX="10" RadiusY="10"/>
            <Path Data="M 140,270 L 140,290 L 250,290 L 250,270" Stroke="DarkGray" StrokeThickness="4"/>
            <Path Data="M 138,280 L 100,280 L 60,240" Stroke="Black" StrokeThickness="2"/>
            <Path Fill="LightGray" Stroke="DarkGray" StrokeThickness="2">
                <Path.Data>
                    <GeometryGroup>
                        <RectangleGeometry Rect="30,180,60,60" RadiusX="10" RadiusY="10"/>
                        <RectangleGeometry Rect="40,190,40,40" RadiusX="10" RadiusY="10"/>
                    </GeometryGroup>
                </Path.Data>
            </Path>
            <Path Fill="SaddleBrown" Stroke="Black" StrokeThickness="2" Data="M 195,240 L 185,225 L 205,225 Z"/>
            <Rectangle Canvas.Left="185" Canvas.Top="124" Width="20" Height="100" Fill="LightGray" Stroke="DarkGray" StrokeThickness="2"/>
            <Path Stroke="DarkGray" StrokeThickness="2" Data="M 140,100 L 140,123 L 250,123 L 250,100"></Path>
            <Rectangle Canvas.Left="170" Canvas.Top="85" Width="50" Height="30" Fill="Black"/>
            
        </Canvas>
    </Viewbox>
</UserControl>
